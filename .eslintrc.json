{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style":"off",
        "consistent-return":"off",
        "comma-dangle":"off",
        "camelcase": "off",
        "import/no-unresolved": [
            "off",
            {
            "commonjs": true
            }
        ]
    }
}